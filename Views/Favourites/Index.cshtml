@model IEnumerable<BookLibraryApp.Models.Favourite>

@{
    ViewData["Title"] = "My Favourites";
}

<h2>My Favourites</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var favourite in Model)
        {
            <tr>
                <td>@favourite.Book.Title</td>
                <td>@favourite.Book.Author</td>
                <td>@favourite.Book.Genre</td>
                <td>
                    <form asp-controller="Favourites" asp-action="Remove" method="post">
                        <input type="hidden" name="favouriteId" value="@favourite.Id" />
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
