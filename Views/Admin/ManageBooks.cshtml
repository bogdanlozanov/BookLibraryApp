@model IEnumerable<BookLibraryApp.Models.Book>

@{
    ViewData["Title"] = "Manage Books";
}

<h2>Manage Books</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>
                    <a asp-action="EditBook" asp-route-id="@book.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteBook" asp-route-id="@book.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="EditBook" asp-route-id="0" class="btn btn-primary">Add New Book</a>
