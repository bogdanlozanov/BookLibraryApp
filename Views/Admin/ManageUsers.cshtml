@model IEnumerable<(BookLibraryApp.Models.User user, IList<string> roles)>

<h2>Manage Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.user.UserName</td>
                <td>@item.user.Email</td>
                <td>
                    @foreach (var role in item.roles)
                    {
                        <span>@role</span><br />
                    }
                </td>
                <td>
                    <a asp-action="ChangeRole" asp-route-userId="@item.user.Id" asp-route-roleName="Admin" class="btn btn-warning">Make Admin</a>
                    <a asp-action="ChangeRole" asp-route-userId="@item.user.Id" asp-route-roleName="User" class="btn btn-secondary">Make User</a>
                    <a asp-action="DeleteUser" asp-route-id="@item.user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
